datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  tasks     Task[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Task {
  createdAt   DateTime @default(now())
  description String?
  done        Boolean?
  id          String   @id @default(cuid())
  title       String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}
